<%- include('../components/head') %>
  <div class="main container">
    <h1>View Document: <%= document.title %>
    </h1>
    <% if (document.mimetype==='application/pdf' ) { %>
      <embed src="/uploads/<%= document.filename %>" type="application/pdf" width="100%" height="800px">
      <% } else if (document.mimetype.startsWith('image/')) { %>
        <img src="/uploads/<%= document.filename %>" alt="<%= document.filename %>" width="100%" height="800px">
        <% } else { %>
          <p>Unsupported file type: <%= document.mimetype %>
          </p>
          <% } %>
            <p>Original filename: <%= document.filename %>
            </p>
            <p>File size: <%= document.size %> bytes</p>
            
  </div>

  </body>

  </html>