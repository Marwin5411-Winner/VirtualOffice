  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar bg-dark navbar-dark navbar-expand-lg p-4">
    <div class="container-fluid">
      <a href="/" class="navbar-brand mb-0 h1">
        <%= title %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="true" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/documents">Documents</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tasks">Task</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/directory">Directory</a>
          </li>
          <% if (user.admin == 1) { %>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Admin
              </a>
              <ul class="dropdown-menu dropdown-menu-dark">
                <li><a class="dropdown-item" href="/admin/users">Users</a></li>
                <li><a class="dropdown-item" href="#">Document</a></li>
                <li><a class="dropdown-item" href="#">...</a></li>
              </ul>
        </ul>
        <% } %>
      </div>
      <!-- Make a profile rounded picture on the right side margin right 2rem and when click with show align-left drop down about account -->
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
          aria-expanded="false">
          <i class="fas fa-user-circle"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="#">Profile</a></li>
          <li><a class="dropdown-item" href="#">Settings</a></li>
          <li><a class="dropdown-item" href="/logout">Logout</a></li>
        </ul>
      
      
      

    </div>

  </nav>